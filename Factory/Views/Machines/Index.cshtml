@using Factory.Models;

<h2>Machines:</h2>

@if (@Model.Count == 0)
{
  <h3>No machines added yet. Add below.</h3>
}

<ul>
  @foreach (Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new machine", "Create", null, null,  new {@class = "myCssClass"})</p>
<p>@Html.ActionLink("Home", "Index", "Home", null,  new {@class = "myCssClass"})</p>